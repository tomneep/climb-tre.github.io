        "collection_date": {
            "description": "The date the sample was collected.",
            "type": "date",
            "required": false,
            "actions": [
                "get",
                "list",
                "filter",
                "history"
            ],
            "restrictions": [
                "Input formats: YYYY-MM, YYYY-MM-DD",
                "Output format: YYYY-MM-DD",
                "At least one required: collection_date, received_date"
